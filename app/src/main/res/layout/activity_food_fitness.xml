<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:text="@string/parentname"
            android:textColor="@color/darkgray"
            android:layout_weight="30"
            android:layout_height="wrap_content" />
        <Spinner
            android:layout_marginTop="15dp"
            android:id="@+id/spItem"
            android:layout_width="0dp"
            android:layout_weight="70"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#009343" />



    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvConsumedNumber"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:text="10000"
                android:textSize="25sp"
                android:textColor="@color/carbs"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvConsumed"
                android:layout_below="@+id/tvConsumedNumber"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:text="@string/consume"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:background="@color/graylight"
            android:layout_width="0.5dp"
            android:layout_weight="0"
            android:layout_height="80dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="33"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvBurnedNumber"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:text="10000"
                android:textSize="25sp"
                android:textColor="@color/fat"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvBurned"
                android:layout_below="@+id/tvBurnedNumber"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:text="@string/burned"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:background="@color/graylight"
            android:layout_width="0.5dp"
            android:layout_weight="0"
            android:layout_height="80dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="34"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNetNumber"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:text="10000"
                android:textSize="25sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvNet"
                android:layout_below="@+id/tvNetNumber"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:text="@string/net"
                android:textSize="15sp"
                android:textColor="@color/darkgray"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/search_button"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="10"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tvMyGoal"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/mygoal"
            android:layout_weight="80"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:background="@drawable/add"
            android:layout_weight="10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/search_button"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="10"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/calburned"
            android:layout_weight="80"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:background="@drawable/add"
            android:layout_weight="10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/search_button"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="10"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/calconsumed"
            android:layout_weight="80"
            android:textSize="18sp"
            android:textColor="@color/darkgray"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:background="@drawable/add"
            android:layout_weight="10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/graylight"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</LinearLayout>