    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_border"
        android:orientation="horizontal"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvSysDia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="152/97"
            android:textSize="16sp" />
        <ImageView

            android:id="@+id/ivHeart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvSysDia"
            android:background="@drawable/like" />
        <TextView
            android:id="@+id/tvMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivHeart"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tvSysDia"
            android:text="mmHg"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tvPulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/ivHeart"
            android:text="97"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/ivline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tvPulse"
            android:background="@drawable/heartbeat" />
        <TextView
            android:id="@+id/tvPulseMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivline"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tvPulse"
            android:text="Beats/Min"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_whrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvPulseMeasure"
            android:text="1"
            android:visibility="gone"/>


       <ImageView
            android:id="@+id/delete_whr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/error"/>
    </RelativeLayout>


