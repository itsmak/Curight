<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:label="Login">
    <RelativeLayout
        android:id="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/ic_curight"/>

    </RelativeLayout>
    <TextView
        android:text="@string/regitstraion"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/layoutOne"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlName"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <EditText
            android:id="@+id/etName"
            android:layout_marginRight="10dp"
            android:textColor="#717171"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlEmail"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tlName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <EditText
            android:id="@+id/etEmail"
            android:layout_marginRight="10dp"
            android:textColor="#717171"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlMobileNumber"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tlEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_marginRight="10dp"
            android:textColor="#717171"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobilenumber"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tlMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <EditText
            android:id="@+id/etPassword"
            android:layout_marginRight="10dp"
            android:textColor="#717171"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlConfirmedPassword"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tlPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <EditText
            android:id="@+id/etConfirmedPassword"
            android:layout_marginRight="10dp"
            android:textColor="#717171"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirmpassword"
            android:textSize="15sp" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:weightSum="100"
        android:id="@+id/llSubmit"
        android:layout_below="@+id/tlConfirmedPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/etContinue"
            android:layout_below="@+id/etMobile"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="44dp"
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:text="Submit"
            android:typeface="sans"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:background="#0075b2"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>