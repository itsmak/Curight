<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:id="@+id/card_header"
        android:padding="20dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/whr"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_gravity="right"
            android:src="@drawable/ic_cancel"
            android:layout_height="20dp" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_header">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="0dp"
                    android:id="@+id/date_layout"
                    android:layout_weight="50"
                    android:layout_marginLeft="40dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_date"
                        android:layout_marginTop="20dp"
                        android:layout_width="20dp"
                        android:background="@mipmap/calendar"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/iv_date"
                        android:layout_width="wrap_content"
                        android:hint="12/3/2017"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/iv_date"
                        android:background="@color/graylight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="0dp"
                    android:id="@+id/time_layout"
                    android:layout_weight="50"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_marginTop="20dp"
                        android:layout_width="20dp"
                        android:background="@mipmap/time"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_toRightOf="@id/iv_time"
                        android:layout_width="wrap_content"
                        android:hint="12:00AM"
                        android:textSize="15sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@id/tv_time"
                        android:background="@color/graylight"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:weightSum="100"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSystolic"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:text="WHR"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />
                    <TextView
                        android:textAlignment="center"
                        android:layout_below="@+id/tvSystolic"
                        android:id="@+id/tvSystolicUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="(cm)"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary" />

                    <EditText
                        android:layout_below="@+id/tvSystolicUnit"
                        android:id="@+id/numberPickerSystolic"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="100dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        />

                </RelativeLayout>



            </LinearLayout>
            <Button
                android:background="@color/colorAccent"
                android:id="@+id/btnSubmit"
                android:text="ADD"
                android:layout_marginTop="30dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>