<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="100">


                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/square_box"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="7dp"
                        android:text="day"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txt_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="5dp"
                        android:text="month"
                        android:textAllCaps="true"/>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >


                        <TextView
                            android:id="@+id/txt_reason"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="Reason"
                            android:textSize="14sp"
                            android:textStyle="bold"/>


                        <ImageView
                            android:id="@+id/img_delete_parentreport"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/error"/>



                    </RelativeLayout>



                    <TextView
                        android:id="@+id/txt_diagonsticname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/diagnosticenter"
                        android:textStyle="normal"/>




                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                       <!-- <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="doctornumber"
                            android:id="@+id/txt_doctornumber"
                            android:layout_margin="5dp"/>-->
                        <TextView
                            android:id="@+id/txt_doctorname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="doctorname"
                            android:textSize="14sp"
                            android:textStyle="normal"/>

                        <TextView
                            android:id="@+id/txt_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/txt_doctorname"
                            android:layout_below="@+id/txt_doctorname"
                            android:layout_marginTop="5dp"
                            android:maxWidth="240dip"
                            android:singleLine="false"
                            android:text="comments"
                            android:textStyle="normal"/>

                        <ImageView
                            android:id="@+id/img_calldoctor_fromreport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/callimage"
                            />

                        <ImageView
                            android:id="@+id/img_reportfiledownload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/img_calldoctor_fromreport"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/ic_insert_drive_file_black_24dp"/>


                    </RelativeLayout>








                   <!-- <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="visit date"
                        android:id="@+id/txt_visitdate"
                        android:layout_margin="5dp"
                        android:textStyle="normal"/>
-->


                </LinearLayout>










            </LinearLayout>



        </LinearLayout>




    </android.support.v7.widget.CardView>






</RelativeLayout>