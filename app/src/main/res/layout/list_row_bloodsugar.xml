<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgray"
    >
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="05-06-2017"
        android:textColor="@color/darkgray"
        android:textSize="18sp" />
    <LinearLayout
        android:id="@+id/ll_articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_date"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">


        <!-- <TextView
             android:id="@+id/tv_time"
             android:layout_marginRight="20dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="12:33"
             android:layout_marginTop="10dp"
             android:textSize="10sp" />-->





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_border"
            android:orientation="horizontal"
            android:padding="5dp">
            <TextView
                android:id="@+id/tv_beforemeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="152/97"
                android:textSize="16sp" />
            <ImageView

                android:id="@+id/ivHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tv_beforemeal"
                android:background="@drawable/like" />
            <TextView
                android:id="@+id/tvMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivHeart"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_beforemeal"
                android:text="mmHg"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_aftermeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/ivHeart"
                android:text="97"
                android:textSize="16sp" />
           <!-- <ImageView
                android:id="@+id/ivline"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/heartbeat"
                android:layout_toRightOf="@+id/tv_aftermeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPulseMeasure"
                android:text="Beats/Min"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/tv_aftermeal"
                android:layout_below="@id/ivline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />-->

            <TextView
                android:id="@+id/txt_whrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvPulseMeasure"
                android:text="1"
                android:visibility="gone"/>


            <ImageView
                android:id="@+id/delete_bloodsugar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/error"/>
        </RelativeLayout>


        <!-- <TextView
             android:id="@+id/tv_Tlink2"
             android:maxLines="3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="15sp" />-->
    </LinearLayout>

</RelativeLayout>