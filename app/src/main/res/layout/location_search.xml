<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/popup_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location_back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_arrow_back"
                android:visibility="visible" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Set My Location"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:visibility="visible" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_searchloctn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/logine_edit_search"
        android:drawableLeft="@drawable/ic_search2"
        android:gravity="left"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textSize="15sp" />
    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:background="@drawable/location"/>

        <TextView
            android:id="@+id/tv_currentlocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_location"
            android:text="Set my current Location"
            android:textColor="#0387d2"
            android:textSize="14sp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searched_address"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/tv_recent_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Searches"
            android:textColor="#0387d2"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_recent1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recent_search"

            android:layout_below="@+id/tv_recent_search"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ABABAB"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_recent2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recent_search"
            android:layout_below="@+id/tv_recent1"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ABABAB"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_recent3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recent_search"
            android:layout_below="@+id/tv_recent2"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ABABAB"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_recent4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recent_search"
            android:layout_below="@+id/tv_recent3"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ABABAB"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/tv_recent5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_recent_search"
            android:layout_below="@+id/tv_recent4"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="#ABABAB"
            android:textSize="13sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/searched_address"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:textSize="22dp"/>




</LinearLayout>