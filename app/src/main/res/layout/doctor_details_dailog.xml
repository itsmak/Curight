<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_foodunit"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="#009bda"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Details"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/doctorname_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="doctor"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/specialization_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="specialization"
            android:textSize="12sp"
            android:textStyle="normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black">

        </View>

        <TextView
            android:id="@+id/tvemail_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="email"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvtime_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="time"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvmobile_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="mobile"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/tvaddress_doctorbydc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="address"
            android:textStyle="normal"/>
    </LinearLayout>

</LinearLayout>