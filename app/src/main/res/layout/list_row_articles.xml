<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/container"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:padding="5sp"
    android:background="@android:color/white"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_below="@+id/layout1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view3"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/listitem11relativeLayout6"
                android:layout_width="match_parent"
                android:weightSum="100"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:fontFamily="calibri_regular"
                    android:textSize="11dp"
                    />
                <TextView
                    android:id="@+id/tvExpired"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_gravity="right"
                    android:layout_weight="15"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="calibri_regular"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FF0707"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/tvToDate"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_gravity="right"
                    android:layout_weight="35"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="calibri_regular"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/image"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listitem11relativeLayout6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:id="@+id/ivItem"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="5dp"
                    android:layout_height="60dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Five steps to boosting your thyroid fucntion almost immediately"
                        android:id="@+id/tvOfferTitle"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:paddingLeft="10dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="13 Aug 2017"
                            android:maxLines="3"
                            android:textColor="@color/graylight"
                            android:textSize="12sp" />



                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tvOfferDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/image"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Strawberry"
                android:maxLines="3"
                android:textColor="@color/darkgray"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/readMore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvOfferDescription"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="...Read More"
                android:gravity="right"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp" />
            <ImageView
                android:layout_below="@+id/readMore"
                android:id="@+id/ivBanner"
                android:layout_marginTop="10dp"
                android:background="@drawable/banner1"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tvOffer"
                android:layout_below="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/graylight"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_below="@+id/tvOffer"
                android:weightSum="100"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/listitem11relativeLayout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/dailbutton"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:paddingLeft="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/tvPhoneno"
                    android:layout_width="0dp"
                    android:layout_weight="44"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:text=""
                    android:fontFamily="calibri_regular"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:text="2.45"
                    android:maxLength="3"
                    android:fontFamily="calibri_regular"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/tvDistancekm"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:text="km"
                    android:maxLength="3"
                    android:fontFamily="calibri_regular"
                    android:textSize="12dp"
                    />
                <ImageView

                    android:id="@+id/ivLike"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="10"
                    android:background="@mipmap/ic_like5"
                    android:layout_marginRight="10dp"
                    />

                <ImageView

                    android:id="@+id/ivWishlist"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="10"
                    android:background="@mipmap/ic_whishlist5"
                    android:layout_marginRight="10dp"
                    />

                <ImageView

                    android:id="@+id/ivShare"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="10"
                    android:src="@drawable/ic_share5"/>
                <TextView
                    android:id="@+id/tvSellBuy"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:fontFamily="calibri_regular"
                    android:text="I'm Seller"
                    android:layout_centerVertical="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#FFFFFF"
                    android:textSize="11dp" />


            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>