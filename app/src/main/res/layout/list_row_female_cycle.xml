<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDays"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="5 days"
                    android:textColor="@color/darkgray"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvcolumn1"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text=""
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvDays2"
                    android:textSize="15sp"
                    android:textColor="@color/darkgray"
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:layout_marginLeft="30dp"
                    android:text="28 Days"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="0dp"
                    android:textAlignment="center"
                    android:layout_weight="50"
                    android:textSize="12sp"
                    android:text="@string/normalduration"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvDay"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text=""
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvgap"
                    android:layout_marginLeft="30dp"
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:text="@string/gap"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="30dp"
                android:background="@color/graylight"
                android:layout_width="match_parent"
                android:layout_height="0.5dp" />
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvCurrentPeriodlabel"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:textSize="12dp"
                    android:layout_marginLeft="30dp"
                    android:text="@string/currentperiod"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvcolumn2"
                    android:layout_width="0dp"
                    android:textSize="12dp"
                    android:layout_weight="10"
                    android:text=":"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvCurrentPeriod"
                    android:layout_width="0dp"
                    android:layout_weight="40"
                    android:textSize="12dp"
                    android:text="3-Aug-17"
                    android:layout_gravity="left"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMissedlabel"
                    android:layout_width="0dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="50"
                    android:textSize="12dp"
                    android:text="@string/misssed"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvcolumn3"
                    android:textSize="12dp"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text=":"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tvMissed"
                    android:layout_width="0dp"
                    android:textSize="12dp"
                    android:layout_weight="40"
                    android:text="Yes"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvNoteslabel"
                    android:textSize="12dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="match_parent"
                    android:text="@string/notes2"
                    android:layout_height="wrap_content" />


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>