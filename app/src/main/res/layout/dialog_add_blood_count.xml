<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="55dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/card_header"
        android:padding="20dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAbout"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="Enter Blood  Count"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/ivCancel"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_gravity="right"
            android:src="@drawable/ic_cancel"
            android:layout_height="20dp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_header">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:id="@+id/linear_datedialog"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="150dp"
                    android:id="@+id/ivCalendar"
                    android:src="@mipmap/calendar"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvSelectDate"
                    android:textSize="10sp"
                    android:textColor="@color/darkgray"
                    android:text="@string/selectdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivAntiCPP"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/AntiCPP"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivAntiCPP"
                        android:textSize="10sp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/et_anticpp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivAntiCPP"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivCRP"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/CRP"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivCRP"
                        android:textSize="10sp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/et_crp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivCRP"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivESR"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/ESR"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivESR"
                        android:textSize="10sp"
                        android:id="@+id/et_esr"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivESR"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHaemoglobin"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/Haemoglobin"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivHaemoglobin"
                        android:textSize="10sp"
                        android:id="@+id/et_hoemoglobin"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivHaemoglobin"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivHbA1c"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/HbA1c"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivHbA1c"
                        android:textSize="10sp"
                        android:id="@+id/et_hbalc"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivHbA1c"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivINR"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/INR"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivINR"
                        android:textSize="10sp"
                        android:id="@+id/et_inr"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivINR"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivPlatelet"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:hint="@string/Platelet"
                        android:background="@android:color/white"
                        android:textSize="10sp"
                        android:id="@+id/et_platelet"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/ivPlatelet"
                        android:layout_toRightOf="@+id/ivPlatelet"
                        android:layout_toEndOf="@+id/ivPlatelet" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivPlatelet"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivProlactin"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="prolactin"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivProlactin"
                        android:textSize="10sp"
                        android:id="@+id/et_prolactin"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivProlactin"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivRBC"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/RBC"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivRBC"
                        android:textSize="10sp"
                        android:id="@+id/et_rbc"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivRBC"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:weightSum="100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivRF"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/RF"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivRF"
                        android:textSize="10sp"
                        android:id="@+id/et_rf"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivRF"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_weight="33"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivWBC"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:src="@drawable/profile"
                        android:layout_height="15dp" />
                    <EditText
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:hint="@string/WBC"
                        android:background="@android:color/white"
                        android:layout_toRightOf="@+id/ivWBC"
                        android:textSize="10sp"
                        android:id="@+id/et_wbc"
                        android:layout_marginBottom="5dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_below="@+id/ivWBC"
                        android:layout_marginBottom="10dp"
                        android:background="@color/gray"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </RelativeLayout>



                <RelativeLayout
                    android:layout_weight="34"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </RelativeLayout>


            </LinearLayout>




            <Button
                android:background="@color/colorAccent"
                android:id="@+id/btnSubmit"
                android:text="OK"
                android:layout_marginTop="40dp"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>



</RelativeLayout>

